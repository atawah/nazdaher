
<odoo>
    <data>
        <record id="asset_qr_code_form_view" model="ir.ui.view">
            <field name="name">asset.qr.code.form.view</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/notebook/page[@string='Depreciation Information']" position="after">
                    <page string="QR Code">
                        <field name="qr_code_image" widget="image" class="oe_avatar"/>
                        <field name="qr_code_url" readonly="1"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
